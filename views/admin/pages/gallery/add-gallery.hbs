<!--  BEGIN CONTENT AREA  -->

<script src="/plugins/ckeditor/ckeditor.js"></script>

{{!-- <script src="//cdn.ckeditor.com/4.14.0/full/ckeditor.js"></script> --}}
<style>
    .banner-post,
    .image-upload {
        max-width: 150px;
    }
</style>
<div id="content" class="main-content">
    <div class="">
        <div class="layout-px-spacing">
            <div class="row layout-top-spacing">
                <div id="basic" class="col-lg-12 col-sm-12 col-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    {{#if galleryItem._id}}
                                    <h4>Sửa {{type}} </h4>
                                    {{else}}
                                    <h4>Thêm {{type}} </h4>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            {{#each errors}}
                            {{>admin/flash-message/error}}
                            {{/each}}
                            {{#each messages}}
                            {{>admin/flash-message/success}}
                            {{/each}}
                            <div class="row">
                                <div class="col-lg-10 col-10 col-md-10 mx-auto">
                                    <form enctype="multipart/form-data"
                                        action="{{buildActionGallery galleryItem._id type}}" method="post">
                                        <div class="form-group">
                                            <label>Số thứ tự hiển thị</label>
                                            <input required="" value="{{galleryItem.idx}}" type="number" name="idx"
                                                placeholder="Số thứ tự ..." class="form-control">
                                        </div>
                                        <div class="form-group ">
                                            <label>Ảnh</label>
                                            <small id="emailHelp" class="form-text text-warning">Không cần resize,
                                                website đã tự động resize !</small>
                                            <input accept="image/jpeg,image/gif,image/png,image/x-eps" name="url_image"
                                                type="file" class="form-control-file">
                                            <div class="row col-md-6 mt-1">
                                                <img src="{{galleryItem.thumb_image}}" class="banner-post"
                                                    alt=" Chưa có ảnh !" class="img-fluid" src="#">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-4">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">Chú thích
                                                    </span>
                                                </div>
                                                <textarea minlength="0" placeholder="Enter note... " name="note"
                                                    class="form-control"
                                                    aria-label="With textarea">{{galleryItem.note}}</textarea>
                                            </div>
                                        </div>

                                        {{#if_equal type "video"}}
                                        <div  class="form-group">
                                       <label>URL VIDEO YOUTUBE</label>
                                            <input required="" value="{{galleryItem.url_video}}" type="text" name="url_video"
                                                placeholder="Enter video url..." class="form-control">
                                        </div>
                                        {{/if_equal}}

                                        {{#if galleryItem._id}}
                                        <input type="submit" class="mt-4 btn btn-primary" value="Sửa ngay">

                                        {{else}}
                                        <input type="submit" class="mt-4 btn btn-primary" value="Tạo ngay">
                                        {{/if}}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>admin/footer}}
</div>
<!--  END CONTENT AREA  -->